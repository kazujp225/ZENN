# ========================================
# データベース設定
# ========================================

# 環境設定
NODE_ENV=development

# SQLite (開発環境)
DATABASE_URL="file:./dev.db"

# PostgreSQL (本番環境)
# DATABASE_URL="postgresql://user:password@localhost:5432/zenn?schema=public"

# PostgreSQL詳細設定（DATABASE_URLの代替）
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=zenn

# SSL証明書（本番環境）
# DATABASE_CA_CERT="-----BEGIN CERTIFICATE-----..."

# PgBouncer設定（オプション）
# PGBOUNCER_ENABLED=false
# PGBOUNCER_URL="postgresql://user:password@pgbouncer:6432/zenn"

# ========================================
# 認証設定
# ========================================

# セッション秘密鍵
SESSION_SECRET=your-secret-key-here

# JWT設定
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# OAuth設定
# GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Twitter
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# ========================================
# アプリケーション設定
# ========================================

# サイトURL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# APIエンドポイント
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ========================================
# ストレージ設定
# ========================================

# AWS S3（画像アップロード用）
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-1
S3_BUCKET_NAME=zenn-clone-uploads

# ========================================
# メール設定
# ========================================

# SMTP設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@zenn-clone.com

# ========================================
# 決済設定
# ========================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ========================================
# 監視・分析
# ========================================

# Sentry
SENTRY_DSN=https://...@sentry.io/...

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ========================================
# 開発設定
# ========================================

# デバッグモード
DEBUG=false

# ログレベル
LOG_LEVEL=info

# 自動マイグレーション
AUTO_MIGRATE=false

# インデックス自動作成
AUTO_CREATE_INDEXES=false

# ========================================
# バックアップ設定
# ========================================

# バックアップ有効化
BACKUP_ENABLED=false

# バックアップスケジュール（cron形式）
BACKUP_SCHEDULE="0 2 * * *"

# バックアップ保持期間（日数）
BACKUP_RETENTION_DAYS=30

# ========================================
# レプリケーション設定
# ========================================

# レプリケーション有効化
REPLICATION_ENABLED=false

# 読み取り専用レプリカ（カンマ区切り）
# READ_REPLICA_URLS="postgresql://replica1:5432/zenn,postgresql://replica2:5432/zenn"

# ========================================
# キャッシュ設定
# ========================================

# Redis
REDIS_URL=redis://localhost:6379

# キャッシュTTL（秒）
CACHE_TTL=3600

# ========================================
# セキュリティ設定
# ========================================

# CORS許可オリジン
CORS_ORIGIN=http://localhost:3000

# レート制限
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# CSRFトークン
CSRF_SECRET=your-csrf-secret

# ========================================
# マイグレーション設定
# ========================================

# SQLiteからPostgreSQLへの移行用
# SQLITE_URL="file:./dev.db"
# POSTGRES_URL="postgresql://user:password@localhost:5432/zenn"