# ========================================
# Supabase設定（必須）
# ========================================

# Supabase URL (https://xxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (公開キー)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# Supabase Service Role Key (秘密キー - サーバー側のみ)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# ========================================
# セッション設定（必須）
# ========================================

# セッション暗号化キー（ランダムな文字列）
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ========================================
# アプリケーション設定（オプション）
# ========================================

# サイトURL（本番環境では適切なドメインを設定）
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 環境設定（本番環境では'production'を設定）
NODE_ENV=development

# ========================================
# セキュリティ設定（本番環境推奨）
# ========================================

# CORS許可オリジン（本番環境では適切なドメインを設定）
CORS_ORIGIN=http://localhost:3000

# レート制限設定
RATE_LIMIT_PER_MINUTE=100

# ファイルアップロード制限（MB）
MAX_FILE_SIZE=5

# ========================================
# 監査・ログ設定（本番環境推奨）
# ========================================

# ログレベル（production環境では'error'推奨）
LOG_LEVEL=debug

# エラー報告サービス（Sentry等）
# ERROR_REPORTING_DSN=https://your-sentry-dsn